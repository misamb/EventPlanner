@page
@using Microsoft.EntityFrameworkCore
@model IndexModel
@{
    ViewData["Title"] = "Avaleht";
}
<a href="https://example.com" title="Click to visit Example!">Hover over me</a>
<div class="text-center">
    <a asp-page="/Events/Index">Events</a>
    <a asp-page="/Persons/Index">Persons</a>
    <a asp-page="/Business/Index">Business</a>
    <a asp-page="/BsnParticipants/Index">BusPart</a>
    <a asp-page="/PersonParticipant/Index">PerPart</a>
    <a asp-page="/PaymentType/Index">PaymentType</a>
</div>

<div class="container">
    <div class="row text-white">
        <div class="col p-3 me-3 bg-primary text-center" >
            <div>Tulevased üritused</div>
        </div>
        <div class="col p-3 bg-primary text-center">
            <div>Toimunud üritused</div>
        </div>
    </div>
    <div class="row text-black">
        <div class="col p-3 me-3 bg-white" >
            <table class="table">
                <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th>Osalejaid</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.FutureEvents)
                {
                    <tr>
                        <td>
                            <a asp-page="/Events/Details" asp-route-id="@item.Id">@item.EventName</a>
                        </td>
                        <td>
                            @item.EventStartTime
                        </td>
                        <td>
                            @IndexModel.GetParticipantCount(item)
                        </td>
                        <td>
                            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Lisa osaleja
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/PrsnParticipant/Create" asp-route-eventId="@item.Id">Eraisik</a></li>
                                <li><a class="dropdown-item" asp-page="/BsnParticipant/Create" asp-route-eventId="@item.Id">Ettevõte</a></li>
                            </ul>

                        </td>
                        <td>
                            <a asp-page="/Events/Delete" title="Kustuta üritus" asp-route-id="@item.Id">
                                <img src="elements/remove.svg" alt="Kustuta" class="img-fluid">
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="col p-3 bg-white">
            <table class="table">
                <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th>Osalejaid</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.PastEvents)
                {
                    <tr>
                        <td>
                            <a asp-page="/Events/Details" asp-route-id="@item.Id">@item.EventName</a>
                        </td>
                        <td>@item.EventStartTime</td>
                        <td>
                            @IndexModel.GetParticipantCount(item)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
