@page
@model WebApp.Pages_Events.DeleteModel

@{
    ViewData["Title"] = "Üritus";
}

<div class="container mt-2">
    <div class="row bg-primary">
        <div class="col-3 text-center text-white">
            <h3>Üritus</h3>
        </div>
    </div>
    <div class="row bg-white text-black p-3">
        <div class="col-3 position-relative">
            <div>
                <a class="position-absolute bottom-0 btn btn-secondary" role="button" asp-page="../Index">Tagasi Avalehele</a>
            </div>
        </div>
        <div class="col">
            <div class="text-primary">
                <h4>Kustuta üritus</h4>
            </div>
            <dl class="row">
                <dt class="col-sm-2">
                    Ürituse nimi:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Event!.EventName)
                </dd>
                <dt class="col-sm-2">
                    Toimumisaeg:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Event!.EventStartTime)
                </dd>
                <dt class="col-sm-2">
                    Koht:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Event!.EventLocation)
                </dd>
                <dt class="col-sm-2">
                    Lisainfo:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Event!.AdditionalInfo)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Event!.Id"/>
                <input type="submit" value="Kustuta" class="btn btn-danger"/>
            </form>
        </div>
    </div>
</div>