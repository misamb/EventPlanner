@page
@model WebApp.Pages_PrsnParticipant.EditModel

@{
    ViewData["Title"] = "Osaleja info";
}
<div class="container mt-2">
    <div class="row bg-primary">
        <div class="col-3 text-center text-white">
            <h3>Osav√µtja</h3>
        </div>
    </div>
    <div class="row bg-white text-black p-3">
        <div class="col-3 position-relative">
            <div>
                <a class="position-absolute bottom-0 btn btn-secondary" role="button" asp-page="../Index">Tagasi Avalehele</a>
            </div>
        </div>
        <div class="col">
            <div class="text-primary">
                <h4>Eraisik</h4>
            </div>
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Person!.FirstName" class="control-label"></label>
                        <input asp-for="Person!.FirstName" class="form-control"/>
                        <span asp-validation-for="Person!.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Person!.LastName" class="control-label"></label>
                        <input asp-for="Person!.LastName" class="form-control"/>
                        <span asp-validation-for="Person!.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Person!.PersonalCode" class="control-label"></label>
                        <input asp-for="Person!.PersonalCode" class="form-control"/>
                        <span asp-validation-for="Person!.PersonalCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PersonParticipant!.PaymentTypeId" class="control-label"></label>
                        <select asp-for="PersonParticipant!.PaymentTypeId" class="form-control" asp-items="@Model.PaymentTypeSelectList"></select>
                        <span asp-validation-for="PersonParticipant!.PaymentTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PersonParticipant!.AdditionalInfo" class="control-label"></label>
                        <input asp-for="PersonParticipant!.AdditionalInfo" class="form-control"/>
                        <span asp-validation-for="PersonParticipant!.AdditionalInfo" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="PersonParticipant!.Id"/>
                    <input type="hidden" asp-for="PersonParticipant!.EventId"/>
                    <input type="hidden" asp-for="PersonParticipant!.PersonId"/>
                    <input type="hidden" asp-for="PersonParticipant!.ParticipantCount"/>
                    <input type="hidden" asp-for="Person!.Id"/>
                    <div class="form-group pt-1">
                        <input type="submit" value="Salvesta" class="btn btn-primary"/>
                        <a class="btn btn-danger" asp-page="/Persons/Delete" asp-route-id="@Model.Person!.Id" role="button">Kustuta eraisik</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}