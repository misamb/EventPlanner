@page
@model WebApp.Pages_PrsnParticipant.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Lisa osaleja Ã¼ritusele '@Model.Event!.EventName'</h1>
<h4>Eraisik</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-check form-switch">
                <input class="form-check-input" asp-for="IsNewPerson" type="checkbox" role="switch" id="FormSwitch" onchange="switchForm()">
                <label class="form-check-label" for="FormSwitch">Lisa uus eraisik</label>
            </div>
            <div id="AddNewPerson" style="display: none;">
                <div class="form-group">
                    <label asp-for="Person.FirstName" class="control-label"></label>
                    <input asp-for="Person.FirstName" class="form-control"/>
                    <span asp-validation-for="Person.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Person.LastName" class="control-label"></label>
                    <input asp-for="Person.LastName" class="form-control"/>
                    <span asp-validation-for="Person.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Person.PersonalCode" class="control-label"></label>
                    <input asp-for="Person.PersonalCode" class="form-control"/>
                    <span asp-validation-for="Person.PersonalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="AddSavedPerson" style="display: block;">
                <label asp-for="PersonParticipant!.PersonId" class="control-label"></label>
                <select asp-for="PersonParticipant!.PersonId" class="form-control" asp-items="@Model.PersonSelectList"></select>
            </div>
            <div class="form-group">
                <label asp-for="PersonParticipant!.AdditionalInfo" class="control-label"></label>
                <textarea asp-for="PersonParticipant!.AdditionalInfo" class="form-control"></textarea>
                <span asp-validation-for="PersonParticipant!.AdditionalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonParticipant!.PaymentTypeId" class="control-label"></label>
                <select asp-for="PersonParticipant!.PaymentTypeId" class="form-control" asp-items="@Model.PaymentTypeSelectList"></select>
            </div>
            <input type="hidden" asp-for="PersonParticipant!.EventId" value="@Model.Event!.Id"/>
            <input type="hidden" asp-for="PersonParticipant!.ParticipantCount" value="1"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
<script>
    function switchForm() {
        let isChecked = document.getElementById("FormSwitch").checked
        document.getElementById("AddSavedPerson").style.display = isChecked ? "none" : "block";
        document.getElementById("AddNewPerson").style.display = isChecked ? "block" : "none";
    }
</script>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}