@page
@model WebApp.Pages_Persons.DeleteModel

@{
    ViewData["Title"] = "Eraisik";
}

<div class="container mt-2">
    <div class="row bg-primary">
        <div class="col-3 text-center text-white">
            <h3>Kustuta Eraisik</h3>
        </div>
    </div>
    <div class="row bg-white text-black p-3">
        <div class="col-3 position-relative">
            <div>
                <a class="position-absolute bottom-0 btn btn-secondary" role="button" asp-page="../Index">Tagasi Avalehele</a>
            </div>
        </div>
        <div class="col">
            <div class="text-primary">
                <h4>Eraisik</h4>
            </div>
            <dl class="row">
                <dt class="col-sm-2">
                    Eesnimi:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Person.FirstName)
                </dd>
                <dt class="col-sm-2">
                    Perenimi:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Person.LastName)
                </dd>
                <dt class="col-sm-2">
                    Isikukood:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Person.PersonalCode)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Person.Id"/>
                <input type="submit" value="Kustuta" class="btn btn-danger"/>
            </form>
        </div>
    </div>
</div>